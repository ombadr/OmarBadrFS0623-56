@model Violazione

@{
    ViewData["Title"] = "Aggiungi Violazione";
}

<h2>@ViewData["Title"]</h2>


<form asp-action="Aggiungi" method="post">
    <div class="form-group">
        <label asp-for="descrizione" class="control-label">Descrizione</label>
        <input asp-for="descrizione" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary my-3">
        Aggiungi Violazione
    </button>
</form>


<div class="mt-3 text-center">
    <a class="btn btn-secondary" asp-action="Index">Torna all'elenco</a>
</div>