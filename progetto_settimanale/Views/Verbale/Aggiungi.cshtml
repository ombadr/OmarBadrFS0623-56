@model Verbale 
@{
    ViewData["Title"] = "Aggiungi Verbale";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Aggiungi" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="idanagrafica">Anagrafica</label>
        <select asp-for="idanagrafica" asp-items="ViewBag.Anagrafiche" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="idviolazione">Tipo Violazione</label>
        <select asp-for="idviolazione" asp-items="ViewBag.Violazioni" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="DataViolazione">Data Violazione</label>
        <input asp-for="DataViolazione" type="date" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="IndirizzoViolazione" class="control-label">Indirizzo Violazione</label>
        <input asp-for="IndirizzoViolazione" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Nominativo_Agente" class="control-label">Nominativo Agente</label>
        <input asp-for="Nominativo_Agente" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DataTrascrizioneVerbale">Data Trascrizione Verbale</label>
        <input asp-for="DataTrascrizioneVerbale" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Importo" class="control-label">Importo</label>
        <input asp-for="Importo" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label asp-for="DecurtamentoPunti" class="control-label">Decurtamento Punti</label>
        <input asp-for="DecurtamentoPunti" class="form-control" type="number" />
    </div>

    <button type="submit" class="btn btn-primary my-3">
        Aggiungi Verbale
    </button>
</form>

<div class="mt-3 text-center">
    <a class="btn btn-secondary" asp-action="Index">Torna all'elenco</a>
</div>