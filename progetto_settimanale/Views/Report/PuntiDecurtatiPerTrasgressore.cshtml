@model IEnumerable<progetto_settimanale.Models.PuntiDecurtatiPerTrasgressore>
@{
    ViewData["Title"] = "Punti Decurtati Per Trasgressore";
}
<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Totale Punti Decurtati</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.idanagrafica</td>
                <td>@item.Cognome</td>
                <td>@item.Nome</td>
                <td>@item.TotalePuntiDecurtati</td>
            </tr>
        }
    </tbody>
</table>